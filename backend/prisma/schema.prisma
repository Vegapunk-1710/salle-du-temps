// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id String @id @default(uuid())
  username String @unique
  password String 
  name String
  dob String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  startingWeight Float
  height Int
  workouts Workout[]
}

model Workout {
  id String @id @default(uuid())
  imageURL String 
  createdBy String 
  createdAt DateTime @default(now())
  title String 
  difficulty Difficulty
  time Int 
  description String
  exercises Exercise[]
  users User[]
}

model Exercise {
  id String @id @default(uuid())
  imageURL String
  createdBy String 
  createdAt DateTime @default(now())
  title String 
  difficulty Difficulty
  time Int 
  type Type
  tutorial String
  setsreps String
  workouts Workout[]
}

enum Difficulty {
  Beginner
  Intermediate
  Advanced
}

enum Days { 
  Monday 
  Tuesday
  Wednesday 
  Thursday 
  Friday 
  Saturday 
  Sunday 
}

enum Type { 
  Aerobic
  Strength
  Stretching
  Balance 
}