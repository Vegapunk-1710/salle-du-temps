generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id String @id @default(uuid())
  username String @unique
  password String 
  name String
  dob String
  createdAt String
  updatedAt String
  startingWeight Float
  height Int 
  workouts Workout[]
}

model Workout {
  id String @id @default(uuid())
  imageURL String 
  createdBy String 
  createdAt String
  title String 
  difficulty String
  time Int 
  description String
  days String[]
  progression WorkoutProgrssion[]
  exercises Exercise[]
  users User[]
}

model Exercise {
  id String @id @default(uuid())
  imageURL String
  createdBy String 
  createdAt String
  title String 
  difficulty String
  time Int 
  type String
  tutorial String
  setsreps String
  progression ExerciseProgression[]
  workouts Workout[]
}

model WorkoutProgrssion{
    id String @id @default(uuid())
    date String
    time String
    workouts Workout[]
  } 

model ExerciseProgression{
    id String @id @default(uuid())
    date String
    weight Int
    sets Int
    reps Int
    exercises Exercise[]
  }
